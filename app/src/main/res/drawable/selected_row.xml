<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorCheckCircle" />
                    <size android:width="60dp" android:height="60dp" />
                    <!--<stroke android:width="2dp" android:color="@color/colorPrimary"/>-->
                </shape>
            </item>

            <item android:width="20dp" android:height="4dp" android:left="10dp" android:top="34dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorCheck" />
                    </shape>
                </rotate>
            </item>

            <item android:width="30dp" android:height="4dp" android:left="22dp" android:top="28dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorCheck" />
                    </shape>
                </rotate>
            </item>
        </layer-list>

    </item>
</selector>